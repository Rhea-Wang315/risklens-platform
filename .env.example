# Environment Configuration

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Database
DATABASE_URL=postgresql://risklens:password@localhost:5432/risklens
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (for caching and pub/sub)
REDIS_URL=redis://localhost:6379/0

# Kafka (for event streaming)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_ALERTS=risklens.alerts
KAFKA_TOPIC_DECISIONS=risklens.decisions
KAFKA_CONSUMER_GROUP=risklens-platform

# Whale-Sentry Integration
WHALE_SENTRY_PATH=../whale-sentry
WHALE_SENTRY_DATA_DIR=../whale-sentry/data

# Alert Manager
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_API_KEY=your_pagerduty_api_key
ALERT_RATE_LIMIT_PER_HOUR=100

# Rule Engine
RULES_CONFIG_PATH=./configs/rules.yaml
RISK_SCORE_WEIGHTS_PATH=./configs/score_weights.yaml

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
API_KEY_HEADER=X-API-Key
ADMIN_API_KEY=your_admin_api_key_here_change_in_production
